	     System.out.println("Result : y not equal x");
		
		int total = 10;
		int MAX = 9;
		
		if (total > MAX)
		{ //block statement start
		   System.out.println ("Error!!");
		   //errorCount++;
		   System.out.println();
		   
		} //block statement end
		
		double amount = 2.5;
		double balance = 5;
		
		if (amount <= balance) 
		{
			balance = balance - amount; 
			System.out.println("Acct new balance = " + balance);
		}
		
		if (amount <= balance) 
			balance = balance - amount; 
			System.out.println("Acct new balance = " + balance);
			// result show occurs error with no block statement
	}

